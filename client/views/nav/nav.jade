nav.navbar.navbar-default(ng-controller='NavCtrl')
  .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed(data-toggle="collapse", data-target="#navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(ui-sref='home'): i.fa.fa-lightbulb-o.fa-2x &nbsp; eLuminate
    #navbar.collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right(ng-show='activeUser')
        li: a(ui-sref='news'): i.fa.fa.fa-globe &nbsp; NewsMap &nbsp;
        li: a(ui-sref='forum'): i.fa.fa.fa-newspaper-o &nbsp; Forum &nbsp;
        li: a(ui-sref='profile'): i.nav-score.fa.fa.fa-rocket &nbsp; {{points}} &nbsp;
        li: button.btn.btn-link.btn-lg(ng-click='logout()'): i.fa.fa-sign-out &nbsp;
      ul.nav.navbar-nav.navbar-right(ng-hide='activeUser')
        li: a(ui-sref='register'): i.fa.fa-user-plus &nbsp; Register &nbsp;
        li: a(ui-sref='login'): i.fa.fa-key &nbsp; Login
